<%- include('../partials/head.ejs') %>
<body>
    <nav>
        <a href='/'>Home</a> <br>
        <a href='/flashcards'>Back to Flashcard list</a>
    </nav>
    <h1><%= flashcard.title %></h1>
    <section><%= flashcard.definition %></section>
    <ul> Tags: 
        <% tags.forEach(tag => { %>
            <li><%= tag %></li>
        <% }) %>
    </ul>
    <ul> References: 
        <% urls.forEach(url => { %>
            <li><a href='<%= url %>' target='blank'><%= url %></a></li>
        <% }) %>
    </ul><br>
    <a href='/flashcards/<%= flashcard.id %>/edit'>EDIT</a><br>
    <form action='/flashcards/<%= flashcard.id %>?_method=DELETE' method='POST'>
        <input type='submit' value='DELETE'>
    </form>
</body>
</html>